{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "ganiBuild",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
				"-g",
				"-Wall",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.o"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "컴파일러: /usr/bin/g++"
        },
        {
            "label": "실행",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "test",
            "dependsOn": "build hello world"
        }
    ]
}