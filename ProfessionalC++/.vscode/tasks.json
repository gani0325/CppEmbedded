{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Debug",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",

                "*.cpp",  

                "`ls",
                "*.c",
                "|",
                "grep",
                "-v",
                "Test_*.c`",

                "-o",
                "../../build/gtest",
                "-lgtest",
                "-lgtest_main",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "디버거에서 생성된 작업입니다."
        },

        
    ],
    "version": "2.0.0"
}